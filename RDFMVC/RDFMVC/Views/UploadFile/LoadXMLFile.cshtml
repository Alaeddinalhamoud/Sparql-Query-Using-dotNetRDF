@model IEnumerable<RDFMVC.Models.XMLFile>

@{
    ViewBag.Title = "RDF/OWL Files";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

 <br/>
<br/>

<div class="container">
    @{


        if (TempData["FileSelected"] != null)
        {

            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Info !</strong> @TempData["FileSelected"]
            </div>

        }

    }


    <div class="panel panel-primary">

        <div class="panel-heading"> <i class="glyphicon glyphicon-file"></i>  Rdf Files</div>
        <div class="panel-body">


            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.filename)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.filename)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.filename }) |
                            @Html.ActionLink("Select File", "SelectFile", new { id = item.filename })
                        </td>
                    </tr>
                }

            </table>


        </div>
        <div class="panel-footer">
            <p>
                @Html.ActionLink(" Upload New File", "Index", null, new { @class = "btn btn-primary fa fa-cloud-upload" })
            </p>
        </div>
    </div>

</div>